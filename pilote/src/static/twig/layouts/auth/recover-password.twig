{% import 'macros/forms.twig' as forms %}

<div class="modal fade" tabindex="-1" role="dialog" id="recover-password-modal">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h3 class="modal-title text-center">Sign Up</h3>
            </div>
            <div class="modal-body text-grey">
                <div class="row text-center">
                    <div class="col-md-7 col-sm-10 col-xs-12 display-inline-block float-none">


                        <script>
                            var recoveryPasswordCallback = function (xhr, message) {
                                switch (xhr.status) {
                                    case 200: message.success('Your password was recovered. See email address.'); break;
                                }
                            }
                        </script>

                        <form action="" method="post" id="recover-password-form" onsubmit="controllerAjaxForm(event, this.form, '#recover-password-form .ajax-response', recoveryPasswordCallback)">
                           
                            <div class="form-group">
                                {{ forms.input('email', '', 'Email', '', 'email') }}
                            </div>

                            <div class="ajax-response mt-15"></div>

                            <button class="btn btn-warning mt-20 width-full recover-password">Recover password</button>
                        </form>

                        <span class="separator-horizontal mt-35 mb-40 info-user"></span>

                        <span>Already have a Moogly account?</span>
                        <a class="btn btn-warning-border mt-10 display-block" data-dismiss="modal"
                           data-toggle="modal" data-target="#login-modal">Log in</a>
                    </div>
                </div>
            </div>
            <div class="modal-footer text-center">
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
