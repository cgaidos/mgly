{% import 'macros/forms.twig' as forms %}

<div class="modal fade" tabindex="-1" role="dialog" id="register-modal">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h3 class="modal-title text-center">Sign Up</h3>
            </div>
            <div class="modal-body text-grey">
                <div class="row text-center">
                    <div class="col-md-7 col-sm-10 col-xs-12 display-inline-block float-none">
                        <a class="btn btn-fb display-block" href="#fb">
                            <i class="fa fa-facebook" aria-hidden="true"></i>Sign up with Facebook
                        </a>
                        <a class="btn btn-google mt-20 display-block" href="#fb">
                            <i class="icon-google"></i>Sign up with Google
                        </a>

                        <span class="separator-title mt-20 mb-20"><span>or</span></span>

                        <script>
                            var loginCallback = function (xhr, message) {
                                switch (xhr.status) {
                                    case 201: message.success(''); break;
                                }
                            }
                        </script>

                        <form action="" onsubmit="controllerAjaxForm(event, this, '#register-user-form .ajax-response', loginCallback)" id="register-user-form">
                            <div class="form-group">
                                {{ forms.input('first_name', '', 'First name') }}
                            </div>
                            <div class="form-group">
                                {{ forms.input('last_name', '', 'Last name') }}
                            </div>
                            <div class="form-group">
                                {{ forms.input('email', '', 'Email', '', 'email') }}
                            </div>
                            <div class="form-group">
                                {{ forms.input('password', '', 'Password', '', 'password') }}
                            </div>

                            <div class="text-left mb-5 mt-15">
                                <label>Date of birth:</label>
                            </div>
                            <div class="row">
                                <div class="col-md-5">
                                    {{ forms.select('month', ['Calender'], 'width-full') }}
                                </div>
                                <div class="col-md-7">
                                    <div class="row">
                                        <div class="col-md-6 mt-sm-5">
                                            {{ forms.select('day', ['Day'], 'width-full') }}
                                        </div>
                                        <div class="col-md-6 mt-sm-5">
                                            {{ forms.select('day', ['Year'], 'width-full') }}
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="ajax-response"></div>

                            <button class="btn btn-warning mt-20 width-full register-user">Register</button>
                        </form>

                        <span class="separator-horizontal mt-35 mb-40 info-user"></span>

                        <span>Already have a Moogly account?</span>
                        <a class="btn btn-warning-border mt-10 display-block" data-dismiss="modal"
                           data-toggle="modal" data-target="#login-modal">Log in</a>
                    </div>
                </div>
            </div>
            <div class="modal-footer text-center">
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
