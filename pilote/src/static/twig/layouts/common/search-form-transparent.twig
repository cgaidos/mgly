{% import 'macros/forms.twig' as forms %}

<form action="">
    <section class="wrapper search">
        <div class="container">
            <div class="search-form col-md-8 col-md-offset-2 col-sm-12">

                <div class="row">

                    <div class="col-sm-9 col-0">
                        <div class="row nm">
                            <div class="col-sm-9 col-0">
                                {{ forms.input('place', 'width-full input-place') }}
                            </div>
                            <div class="col-sm-3 col-0">
                                {{ forms.select('kids', [1,2,3,4,5], 'width-full input-kids') }}
                            </div>
                        </div>

                        <div class="row nm">
                            <div class="col-sm-6 col-0 date date-from">
                                {{ forms.input('place', 'width-full') }}
                            </div>
                            <div class="col-sm-6 col-0 date date-to">
                                {{ forms.input('place', 'width-full') }}
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-3 col-0">
                        <div class="row nm">
                            <div class="col-sm-12 col-0">
                                <button type="button" class="btn btn-primary btn-more width-full">More
                                </button>
                            </div>
                        </div>

                        <div class="row nm">
                            <div class="col-sm-12 col-0">
                                <button type="button" class="btn btn-primary btn-search width-full">Search
                                </button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</form>
