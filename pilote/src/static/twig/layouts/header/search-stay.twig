{% import 'macros/forms.twig' as forms %}
{% include './layouts/header/common/no-login.twig' %}

<form action="">
    <section class="wrapper search">
        <div class="container">
            <div class="search-form col-md-8 col-md-offset-2 col-sm-12">

                <div class="row">

                    <div class="col-sm-9 col-0">
                        <div class="row nm">
                            <div class="col-sm-9 col-0">
                                {{ forms.input('place', 'address_full width-full input-place', 'Country, City', 'Paris') }}
                            </div>
                            <div class="col-sm-3 col-0">
                                {{ forms.input('kids', 'width-full input-kids', 'Kids', '', 'number', 'min=1') }}
                            </div>
                        </div>

                        <div class="row nm">
                            <div class="col-md-12">
                                <div class="row nm row-date-dark input-daterange">
                                    <div class="col-sm-6 col-0 date date-from">
                                        {{ forms.input('place', 'width-full date_from', 'From') }}
                                    </div>
                                    <div class="col-sm-6 col-0 date date-to">
                                        {{ forms.input('place', 'width-full date_to', 'To') }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-3 col-0">
                        <div class="row nm">
                            <div class="col-sm-12 col-0">
                                <button type="button" class="btn btn-primary btn-more width-full">More</button>
                            </div>
                        </div>

                        <div class="row nm">
                            <div class="col-sm-12 col-0">
                                <button type="button" class="btn btn-primary btn-search width-full">Search</button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</form>


