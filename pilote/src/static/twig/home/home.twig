                   </ul>

                   <div class="tab-content">
                       <div role="tabpanel" class="tab-pane active" id="stay">
                           {% include 'home/partials/stay-form.twig' %}
                       </div>
                       <div role="tabpanel" class="tab-pane" id="activity">
                           {% include 'home/partials/activity-form.twig' %}
                       </div>
                       <div role="tabpanel" class="tab-pane" id="actrequest">
                           {% include 'home/partials/actrequest-form.twig' %}
                       </div>
                   </div>

                   <div class="mb-120">&nbsp;</div>
               </div>
